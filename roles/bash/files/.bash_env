# === VIM Configuration ===
# Set the default editor to vim
export EDITOR="vim"

# === User-specific Environment Variables ===
# Set the system-wide PATH (if you want to add additional directories here)
# export PATH="$PATH:/path/to/bin"
export PATH="$HOME/.local/bin:$PATH"


